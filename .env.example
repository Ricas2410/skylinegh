# Skyline Ghana Constructions - Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-make-it-long-and-random
DEBUG=True
DJANGO_ENV=development

# Database Configuration
DB_NAME=skylinegh_db
DB_USER=skylinegh_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@skylinegh.com

# ImageKit Configuration (for media storage)
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-endpoint

# AWS S3 Configuration (alternative media storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=skylinegh-media
AWS_S3_REGION_NAME=us-east-1

# Security Settings
ADMIN_EMAIL=admin@skylinegh.com

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here

# Social Media Links
FACEBOOK_URL=https://facebook.com/skylineghana
TWITTER_URL=https://twitter.com/skylineghana
LINKEDIN_URL=https://linkedin.com/company/skylineghana
INSTAGRAM_URL=https://instagram.com/skylineghana

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# reCAPTCHA (for form protection)
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key

# Company Information
COMPANY_NAME=Skyline Ghana Constructions
COMPANY_PHONE=+233-XX-XXX-XXXX
COMPANY_EMAIL=info@skylinegh.com
COMPANY_ADDRESS=East Legon, Accra, Ghana

# Business Hours
BUSINESS_HOURS_WEEKDAY=8:00 AM - 6:00 PM
BUSINESS_HOURS_SATURDAY=9:00 AM - 4:00 PM
BUSINESS_HOURS_SUNDAY=Closed
